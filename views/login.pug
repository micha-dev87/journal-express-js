extends layout

block content
  .auth-container.container.mt-5
    h1.text-center.mb-4 Connexion
    if error
      .alert.alert-danger= error
    
    form(action="/auth", method="POST")
      .form-group
        label(for="username") Nom d'utilisateur
        input#username.form-control(type="text", name="username", required)
      
      .form-group
        label(for="password") Mot de passe
        input#password.form-control(type="password", name="password", required)
      
      button.btn.btn-primary.btn-block(type="submit") Se connecter
    
    p.text-center.mt-3
      | Pas encore de compte ? 
      a(href="/register") S'inscrire 